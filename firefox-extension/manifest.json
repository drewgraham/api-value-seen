{
  "manifest_version": 2,
  "name": "API Value Tracker",
  "version": "1.0",
  "description": "Tracks API responses and checks if values appear in the DOM.",
  "permissions": ["<all_urls>", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "API Value Tracker"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}
